# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/exam_checker
# For development, you can use SQLite instead:
# DATABASE_URL=sqlite:///./exam_checker.db

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# API Keys
GOOGLE_CLOUD_VISION_API_KEY=your_google_cloud_vision_key_here
MATHPIX_APP_ID=your_mathpix_app_id_here
MATHPIX_APP_KEY=your_mathpix_app_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# For production migration
CLAUDE_API_KEY=your_claude_api_key_here

# Storage Configuration
STORAGE_TYPE=local  # Options: local, s3, gcs
# For local storage
UPLOAD_DIR=./uploads
# For S3
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# S3_BUCKET_NAME=exam-checker-bucket
# For GCS
# GCS_BUCKET_NAME=exam-checker-bucket
# GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# Application Settings
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:8501

# OCR Settings
OCR_CONFIDENCE_THRESHOLD=0.70
DPI_SETTING=300

# Evaluation Settings
USE_CLAUDE=False  # Set to True for production
